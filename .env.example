# Knowledge Base Search Service
RAG_SERVICE_URL=http://localhost:8000/query
RAG_TIMEOUT=30

# CI/CD Database Service
NL2SQL_SERVICE_URL=http://localhost:8088/query
NL2SQL_TIMEOUT=5

# MCP Server Configuration
MCP_SERVER_NAME=ci-knowledge-mcp

# Transport mode: "stdio" for local development, "http" for remote deployment
MCP_TRANSPORT=stdio

# HTTP server configuration (only used when MCP_TRANSPORT=http)
MCP_HTTP_HOST=0.0.0.0
MCP_HTTP_PORT=8080

# User Authorization (only used when MCP_TRANSPORT=http)
# Optional: Comma-separated list of allowed GitHub usernames
# Leave empty to allow all users (username is used for audit/logging only)
# Example: ALLOWED_USERS=alice,bob,charlie
ALLOWED_USERS=
